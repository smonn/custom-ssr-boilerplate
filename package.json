{
  "name": "custom-ssr-boilerplate",
  "version": "1.0.0",
  "description": "Custom SSR with TypeScript, React, Webpack, and Express",
  "scripts": {
    "clean": "rimraf dist",
    "dev:server": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json DEBUG=server:*,shared:* webpack --env.target=server",
    "dev:client": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json webpack-dev-server --env.target=client",
    "dev": "npm-run-all --silent clean --parallel dev:server dev:client",
    "build:server": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json NODE_ENV=production webpack --env.target=server",
    "build:client": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json NODE_ENV=production webpack --env.target=client",
    "build": "npm-run-all clean type-check --parallel build:server build:client",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test": "cross-env BABEL_ENV=test jest --watch",
    "test:ci": "cross-env BABEL_ENV=test jest --ci",
    "type-check": "tsc"
  },
  "license": "MIT",
  "dependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "@loadable/component": "^5.12.0",
    "@loadable/server": "^5.12.0",
    "compression": "^1.7.4",
    "core-js": "^3.6.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-hot-loader": "^4.12.21"
  },
  "devDependencies": {
